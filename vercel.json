{
  "version": 2,
  "builds": [
    {
      "src": "backend/python/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/angular/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/video-copier"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/python/api/index.py"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|svg|json))",
      "dest": "frontend/angular/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/angular/index.html"
    }
  ],
  "env": {
    "API_BASE_URL": "/api"
  }
} 