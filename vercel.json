{
  "version": 2,
  "builds": [
    {
      "src": "backend/python/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/angular/dist/video-copier/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/python/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/angular/dist/video-copier/$1"
    }
  ],
  "env": {
    "API_BASE_URL": "/api",
    "FLASK_APP": "backend/python/api/index.py",
    "FLASK_ENV": "production",
    "PYTHONPATH": "backend/python"
  }
} 