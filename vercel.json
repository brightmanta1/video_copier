{
  "version": 2,
  "builds": [
    {
      "src": "backend/python/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/angular/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/angular/dist/video-copier",
        "buildCommand": "cd frontend/angular && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/python/api/index.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/angular/dist/video-copier/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|svg|json))",
      "dest": "/frontend/angular/dist/video-copier/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/angular/dist/video-copier/index.html"
    }
  ],
  "env": {
    "API_BASE_URL": "/api"
  }
} 